{
  "name": "turing-machine-simulator",
  "version": "1.0.0",
  "description": "Turing Machine Simulator Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "concurrently \"npm run server\" \"npm run electron\"",
    "server": "cd backend && go run main.go",
    "electron": "electron ."
  },
  "keywords": ["turing-machine", "simulator", "desktop-app"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.2"
  },
  "build": {
    "appId": "com.turing.simulator",
    "productName": "Turing Machine Simulator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "frontend/**/*",
      "backend/**/*",
      "turing/**/*",
      "input/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "dir",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
